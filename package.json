{
	"name": "ui-twitter-ts",
	"version": "1.0.0",
	"private": true,
	"author": "ZweihÃ¤nder",
	"license": "MIT",
	"description": "TypeScript implementation of Twitter clone originally by Tyler McGinnis with some useful additions.",
	"dependencies": {
		"apollo-boost": "^0.4.7",
		"concurrently": "^5.2.0",
		"faunadb": "^2.13.1",
		"graphql": "^15.0.0",
		"graphql-tag": "^2.10.3",
		"graphql.macro": "^1.4.2",
		"netlify-lambda": "^1.6.3",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-icons": "^3.10.0",
		"react-redux": "^7.2.0",
		"react-redux-loading": "^1.0.1",
		"react-router-dom": "^5.1.2",
		"react-scripts": "3.4.1",
		"redux": "^4.0.5",
		"redux-devtools-extension": "^2.13.8",
		"redux-thunk": "^2.3.0",
		"source-map-support": "^0.5.19"
	},
	"devDependencies": {
		"@babel/preset-typescript": "^7.9.0",
		"@graphql-codegen/cli": "^1.13.3",
		"@graphql-codegen/introspection": "1.13.3",
		"@graphql-codegen/typescript": "1.13.3",
		"@graphql-codegen/typescript-document-nodes": "^1.13.3",
		"@graphql-codegen/typescript-operations": "1.13.3",
		"@testing-library/jest-dom": "^5.5.0",
		"@testing-library/react": "^10.0.3",
		"@testing-library/user-event": "^10.1.0",
		"@types/aws-lambda": "^8.10.51",
		"@types/node-fetch": "^2.5.7",
		"@types/react": "^16.9.34",
		"@types/react-dom": "^16.9.7",
		"@types/react-redux": "^7.1.7",
		"@types/react-router-dom": "^5.1.5",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.3",
		"eslint-plugin-react": "^7.19.0",
		"netlify-cli": "^2.48.0",
		"prettier": "^2.0.5",
		"stylelint": "^13.3.3",
		"stylelint-config-prettier": "^8.0.1",
		"stylelint-config-standard": "^20.0.0",
		"tslib": "^1.11.1",
		"typescript": "^3.8.3"
	},
	"scripts": {
		"dev": "netlify dev",
		"start": "npm run mergeSchema && npm run startWithoutMerge",
		"startWithoutMerge": "concurrently \"npm:codegenWatch\" \"react-scripts start\"",
		"build": "npm run mergeSchema && npm run codegen && react-scripts build && npm run functionsBuild",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"functionsBuild": "netlify-lambda build functions -c ./functions/shared/webpack.config.js",
		"codegen": "netlify dev:exec graphql-codegen --config codegen.yml",
		"codegenWatch": "netlify dev:exec graphql-codegen --watch \"./src/queries/*.graphql\" --config codegen.yml",
		"mergeSchema": "netlify dev:exec node ./scripts/faunadb-import.js",
		"bootstrap": "npm run mergeSchema && netlify dev:exec node ./scripts/faunadb-bootstrapData.js"
	},
	"engines": {
		"node": "12.x"
	},
	"babel": {
		"presets": [
			"@babel/preset-typescript",
			"@babel/preset-env"
		],
		"plugins": [
			"@babel/plugin-proposal-class-properties",
			"@babel/plugin-transform-object-assign",
			"@babel/plugin-proposal-object-rest-spread"
		],
		"sourceMaps": true
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"parserOptions": {
			"project": "tsconfig.json",
			"ecmaVersion": 2019,
			"ecmaFeatures": {
				"jsx": true
			},
			"useJSXTextNode": true
		},
		"plugins": [
			"@typescript-eslint",
			"react"
		],
		"extends": [
			"eslint:recommended",
			"react-app",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"plugin:react/recommended",
			"prettier",
			"prettier/@typescript-eslint",
			"prettier/react"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": [
				"error",
				{
					"allow": [
						"warn",
						"error",
						"debug"
					]
				}
			],
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			]
		},
		"overrides": [
			{
				"files": [
					"./src/queries/graphql.tsx"
				],
				"rules": {
					"@typescript-eslint/camelcase": "off",
					"@typescript-eslint/no-explicit-any": "off"
				}
			}
		]
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always"
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-prettier"
		],
		"rules": {
			"indentation": "tab",
			"max-empty-lines": 2,
			"comment-whitespace-inside": null,
			"declaration-block-no-shorthand-property-overrides": true,
			"declaration-colon-newline-after": null,
			"no-descending-specificity": null
		}
	},
	"browserslist": {
		"production": [
			"> 0.2%",
			"Firefox ESR",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
